     endif()
 
+    # Use windows paths on protoc
+    if(CMAKE_HOST_WIN32)
+      if(NOT _abs_file MATCHES "^[A-Za-z]:")
+        if(CMAKE_VERSION VERSION_GREATER_EQUAL "3.19")
+          file(REAL_PATH "${_abs_file}" _abs_file)
+        else()
+          set(_abs_file "$ENV{SYSTEMDRIVE}${_abs_file}")
+        endif()
+      endif()
+    endif(CMAKE_HOST_WIN32)
